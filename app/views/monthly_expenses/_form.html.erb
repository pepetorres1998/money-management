<%= form_with model: monthly_expense, id: dom_id(monthly_expense, "form"), class: "table min-w-full" do |form| %>
  <div>
    <%= form.text_field :name, autofocus: true, class: "block rounded-md border border-gray-200 outline-none px-3 py-2  w-full" %>
    <%= inline_error_for(:name, monthly_expense) %>
  </div>
  <div>
    <%= form.text_field :amount, class: "block rounded-md border border-gray-200 outline-none px-3 py-2  w-full" %>
    <%= inline_error_for(:amount, monthly_expense) %>
  </div>
  <div>
    <%= form.text_field :description, class: "block rounded-md border border-gray-200 outline-none px-3 py-2  w-full" %>
    <%= inline_error_for(:description, monthly_expense) %>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
